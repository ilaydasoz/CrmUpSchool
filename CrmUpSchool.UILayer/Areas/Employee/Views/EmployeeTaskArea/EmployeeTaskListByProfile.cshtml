@model List<EmployeeTask>
@{
    Layout = "_EmployeeLayout";
    int count = 0;
}

<h3>Your Tasks</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Status</th>
        <th>Date</th>
        <th>Details</th>
        <th>New step to the task</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Status</td>
            <td>@item.Date.ToString("dd.MM.yyyy")</td>
            <td>@item.AppUser.Name @item.AppUser.Surname</td>
            <td><a href="/Employee/EmployeeTaskDetail/Index/@item.EmployeeTaskID" class="btn btn-outline-danger">Show Details</a></td>
            <td><a href="#" class="btn btn-outline-danger">New step</a></td>          
        </tr>
    }
</table>
<td><a href="EmployeeTaskAdd" class="btn btn-outline-info">New Task</a></td>