@model List<Announcement>

@{
    Layout = "_CrmLayout";
}

<h1>Announcement List</h1>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Edit</th>
        <th>Open Announcement</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnnouncementID</td>
            <td>@item.Title</td>
            <td>@item.AnnouncementDate</td>
            <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="#" class="btn btn-outline-success">Edit</a></td>
            <td><a href="#" class="btn btn-outline-dark">Open Announcement</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-outline-primary">New Announcement</a>