@model List<EmployeeTask>
@{
    ViewData["Title"] = "Index";
    Layout = "_CrmLayout";
    int count = 0;
 }

<h3>Task List</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Status</th>
        <th>Date</th>
        <th>Employee</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
<tr>
    <td>@count</td>
    <td>@item.Title</td>
    <td>@item.Status</td>
    <td>@item.Date.ToString("dd.MM.yyyy")</td>
    <td>@item.AppUser.Name @item.AppUser.Surname</td>
    <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
    <td><a href="#" class="btn btn-outline-danger">Update</a></td>
    <td><a href="#" class="btn btn-outline-danger">Show Details</a></td>
</tr>
    }
</table>
<td><a href="EmployeeTaskAdd" class="btn btn-outline-info">New Task</a></td>